!!!
%html
  %head
    %title ClassStatus
    %link{:href => "http://fonts.googleapis.com/css?family=Glegoo|Merriweather|Open+Sans:400,600,700,300", :rel => "stylesheet", :type => "text/css"}/
    %meta{ name: "viewport", content: "width=440, maximum-scale=1" }
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "https://js.stripe.com/v1/"
    = csrf_meta_tags
    = tag :meta, name: "stripe-key", content: STRIPE_PUBLIC_KEY
    = favicon_link_tag 'logo1.png'
    %link{ href: image_path("apple-touch-icon-precomposed-144x144.png"), rel: "apple-touch-icon-precomposed", sizes: "144x144" }
    :javascript
      var base = document.createElement('a');
      base.href = "#{root_url}";

  %body{ class: "#{controller.controller_name} #{controller.controller_name}-#{controller.action_name}" }
    #not-footer
      = render "layouts/header"
      #main{ role: "main" }= yield
    = render "layouts/footer"
    = javascript_include_tag "application", "data-turbolinks-track" => true
